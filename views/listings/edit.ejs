<%- layout("/layouts/boilerplate") -%>

    <div class="row mt-3">
        <div class="col-8 offset-2">
    <h2>Edit your Listing</h2>
    <form method="POST" action="/listings/<%=listing._id%>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
       
        <div class="mb-3" >
            <label for="title" class="form-group">Title</label>
            <input name="listing[title]" 
                   value="<%=listing.title%>" 
                   type="text" 
                   class="form-control"
                   class="needs-validation"
                   required
            >
        </div>
        
        <div  class="mb-3" >
            <label for="description" class="form-group">Description</label>
            <textarea name="listing[description]" 
                      class="form-control"
                      class="needs-validation"
                      required
            ><%=listing.description%></textarea>
        </div>
        <div  class="mb-3"  >
         <img src="<%= oriurl %>" >
        </div>
        <div  class="mb-3"  >
            <label for="image" class="form-group"> New Image</label>
            <input name="listing[image]" 
                 type="file"
                   class="form-control"
                   class="needs-validation"       
            >
        </div>
        
        <div   class="mb-3" >
            <label for="price" class="form-group">Price</label>
            <input name="listing[price]" 
                   value="<%=listing.price%>" 
                   type="number" 
                   class="form-control"
                   class="needs-validation"
                   required
            >
        </div>
        
        <div class="mb-3">
            <label for="location" class= "form-group">Location</label>
            <input name="listing[location]" 
                   value="<%=listing.location%>" 
                   
                   class="form-control"
                   class="needs-validation"
                   required
            >
        </div>
        
        <div class=mb-3>
            <label for="country" class= "form-group"></label>Country</label>
            <input name="listing[country]" 
                   value="<%=listing.country%>" 
                   class="form-control"
                   class="needs-validation"
                   required
            >
        </div>
        
        <button class="btn btn-dark add-btn mt-3 mb-3">Edit</button>
        
    </form>

</div>
</div>
<script src="/js/script.js"></script>